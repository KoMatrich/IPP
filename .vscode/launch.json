{
    "inputs": [
    {
        "id": "tests",
        "description": "Select client or server",
        "type": "promptString",
    }
    ],
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "src/interpret.py",
            "args": [
                "--source=./Testy/interpret-only/${input:tests}.src",
                "--input=./Testy/interpret-only/${input:tests}.in"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Launch currently open script",
            "args": [
                "-d=./Testy/interpret-only",
                "-r",
                "--int-only",
                "--int-script=${workspaceFolder}/src/interpret.py"
            ],
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/src/test.php",
            "cwd": "${workspaceFolder}/",
            "port": 0,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}"
            }
        }
    ]
}